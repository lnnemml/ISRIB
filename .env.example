# ISRIB Shop - Environment Variables Template (Manual Payment System)
# Copy this file to .env and fill in your actual values

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Tawk.to Live Chat
TAWK_TO_ID=YOUR_TAWK_TO_PROPERTY_ID

# Meta (Facebook) Pixel
META_PIXEL_ID=XXXXXXXXXX

# Reddit Pixel
REDDIT_PIXEL_ID=t2_XXXXXXXXXX

# Email Configuration (for contact forms)
SMTP_HOST=smtp.protonmail.com
SMTP_PORT=587
SMTP_USER=isrib.shop@protonmail.com
SMTP_PASS=YOUR_EMAIL_PASSWORD

# Airtable (for CRM)
AIRTABLE_API_KEY=keyXXXXXXXXXXXXXX
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
AIRTABLE_TABLE_NAME=Orders

# Site Configuration
SITE_URL=https://isrib.shop
SITE_NAME=ISRIB Shop
SITE_DESCRIPTION=Advanced Research Chemicals for Scientific Innovation

# Security
JWT_SECRET=your-jwt-secret-key-here
API_KEY=your-api-key-here

# Development/Production flags
NODE_ENV=production
DEBUG_MODE=false
ANALYTICS_ENABLED=true

# Manual Payment Configuration
CONTACT_EMAIL=isrib.shop@protonmail.com
SUPPORT_EMAIL=support@isrib.shop
TECHNICAL_EMAIL=technical@isrib.shop

# Cryptocurrency Wallets (for payment instructions)
BTC_WALLET=YOUR_BITCOIN_WALLET_ADDRESS
ETH_WALLET=YOUR_ETHEREUM_WALLET_ADDRESS
USDT_WALLET=YOUR_USDT_WALLET_ADDRESS

# Bank Details (for SEPA/SWIFT transfers)
BANK_NAME=YOUR_BANK_NAME
IBAN=YOUR_IBAN_NUMBER
SWIFT_CODE=YOUR_SWIFT_CODE
